{
  "name": "nam-viet-erp-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "cms:dev": "yarn workspace @nam-viet-erp/cms dev",
    "cms:build": "yarn workspace @nam-viet-erp/cms build",
    "cms:lint": "yarn workspace @nam-viet-erp/cms lint",
    "cms:preview": "yarn workspace @nam-viet-erp/cms preview",
    "sale:dev": "yarn workspace @nam-viet-erp/sale dev",
    "sale:build": "yarn workspace @nam-viet-erp/sale build",
    "sale:lint": "yarn workspace @nam-viet-erp/sale lint",
    "sale:preview": "yarn workspace @nam-viet-erp/sale preview",
    "lint": "yarn workspace @nam-viet-erp/sale lint && yarn workspace @nam-viet-erp/cms lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@ant-design/icons": "^6.0.1",
    "@eslint/js": "^9.35.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "antd": "^5.27.3",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "supabase": "^2.40.7",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.6",
    "vite-plugin-pwa": "^1.0.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "apexcharts": "^5.3.5",
    "react-apexcharts": "^1.7.0"
  }
}
